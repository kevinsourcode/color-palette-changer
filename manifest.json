{
    "manifest_version" : 3,
    "name" : "Color Reader",
    "description" : "Turn your page into the color palette of your choice",
    "author" : "Kevin Roy",
    "version": "1.0.0",
    "action" : {
        "defualt_title" : "Color Reader",
        "default_icon" : "images/icons/icons8-stormtrooper-38.png",
        "default_popup" : "ui/popup.html"
    },

    "icons" : {
        "16" : "images/icons/icons8-stormtrooper-16.png",
        "38" : "images/icons/icons8-stormtrooper-38.png"
    },


    "background" : {
        "service-worker" :"popup.js"
    },

    "permissions": ["tabs", "activeTab"],

    "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Alt+Shift+D",
            "mac": "Command+B"
          }
        }
    }
}


